//代码块复制按钮样式
if (hexo-config('codeblock.copy_button.enable')) {
  .highlight-container {
    position: relative;
  }
  
  .highlight-container:hover .copy-btn, .highlight-container .copy-btn:focus {
    opacity: 1;
  }
  
  .copy-btn {
    color: #333;
    cursor: pointer;
    display: inline-block;
    font-weight: bold;
    line-height: 1.6;
    opacity: 0;
    outline: 0;
    padding: 2px 6px;
    position: absolute;
    vertical-align: middle;
    white-space: nowrap;
    -moz-user-select: none;
    -ms-user-select: none;
    -webkit-user-select: none;
    user-select: none;
    transition: all 0.2s ease;
    right: 10px;
  }
  
  .highlight-container .btn-success {
    color: #fff;
    background-color: #28a745;
    border-color: #28a745;
    border-radius: 3px;
    font-size: .8em;
    transform: scale(1.2);
  }
  
  .highlight-container .btn-success:hover {
    background-color: #1e7e34;
    border-color: #1c7430;
  }
  
  .highlight-container .fa-copy {
    font-size: 1.2em;
    margin-right: 4px;
  }
  
  // 添加复制失败样式
  .highlight-container .btn-danger {
    color: #fff;
    background-color: #dc3545;
    border-color: #dc3545;
    border-radius: 3px;
    font-size: .8em;
  }
}

// 调整mac风格复制按钮的样式
if (hexo-config('codeblock.copy_button.style') == 'mac') {
  .highlight figcaption {
    height: 30px;
    line-height: 30px;
    margin-top: -3.5px;
  }

  .copy-btn {
    color: #999;
    font-size: 14px;
    padding: 0;
    top: 3px;
    right: 20px;
    transition: all 0.3s ease;
  }

  .copy-btn.copy-btn-success {
    color: #27ae60;
    transform: scale(1.2);
    animation: pulse 0.5s;
  }
  
  .copy-btn.copy-btn-danger {
    color: #e74c3c;
    animation: shake 0.5s;
  }
  
  .copy-btn:hover {
    color: #555;
    transform: scale(1.2);
  }
  
  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.4); }
    100% { transform: scale(1.2); }
  }
  
  @keyframes shake {
    0%, 100% { transform: translateX(0); }
    20%, 60% { transform: translateX(-5px); }
    40%, 80% { transform: translateX(5px); }
  }
  
  // 为代码块添加渐变边框效果
  figure.highlight:hover {
    box-shadow: 0 10px 30px 0 rgba(0, 0, 0, .5);
  }
}

// 添加全局代码块美化样式
code {
  padding: 2px 4px;
  border-radius: 3px;
  transition: background-color 0.2s;
}

// 代码块复制提示样式
.copy-success-tooltip {
  position: absolute;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  padding: 5px 10px;
  border-radius: 3px;
  font-size: 12px;
  pointer-events: none;
  z-index: 100;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  white-space: nowrap;
}

// 针对移动设备优化代码块样式
@media (max-width: 767px) {
  figure.highlight {
    margin: 0 -12px;
  }
  
  .highlight-container {
    overflow-x: auto;
  }
  
  .copy-btn {
    font-size: 12px;
    top: 1px;
    right: 15px;
  }
}

// 代码块背景色微调
.highlight, pre {
  /* 可以根据需要调整 */
  background-color: var(--highlight-background);
}
